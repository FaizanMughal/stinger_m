		Inventory.PickupMessage "";
		Inventory.Amount 12;
		Inventory.MaxAmount 48;
		Ammo.BackpackAmount 9;
		Ammo.BackpackMaxAmount 96;
		Ammo.DropAmount 6;
		+INVENTORY.IGNORESKILL;
	}
